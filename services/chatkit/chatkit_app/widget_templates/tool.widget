{
  "version": "1.0",
  "name": "tool-card",
  "template": "{\n  \"type\": \"Card\",\n  \"children\": [\n    {\n      \"type\": \"Row\",\n      \"children\": [\n        {\n          \"type\": \"Box\",\n          \"children\": [\n            { \"type\": \"Icon\", \"name\": \"square-code\", \"size\": \"lg\" }\n          ],\n          \"background\": \"alpha-10\",\n          \"radius\": \"sm\",\n          \"padding\": 1.5\n        },\n        {\n          \"type\": \"Text\",\n          \"value\": {{ tool_title | tojson }},\n          \"size\": \"sm\",\n          \"weight\": \"semibold\",\n          \"maxLines\": 1,\n          \"truncate\": true\n        },\n        { \"type\": \"Spacer\" }\n        {% if time_caption %},\n        { \"type\": \"Caption\", \"value\": {{ time_caption | tojson }} }\n        {% endif %},\n        { \"type\": \"Badge\", \"label\": {{ status_value | tojson }}, \"color\": {{ status_badge | tojson }} },\n        {\n          \"type\": \"Button\",\n          \"label\": {{ toggle_label | tojson }},\n          \"variant\": \"outline\",\n          \"size\": \"xs\",\n          \"onClickAction\": {\n            \"type\": \"agent.tool.toggle\",\n            \"payload\": {\n              \"id\": {{ toggle_id | tojson }},\n              \"expanded\": {{ expanded_next | tojson }},\n              \"toolPayload\": {{ tool_payload | tojson }}\n            }\n          }\n        }\n      ],\n      \"gap\": 3,\n      \"align\": \"center\",\n      \"wrap\": \"nowrap\",\n      \"width\": \"100%\"\n    }\n    {% if expanded %},\n    {\n      \"type\": \"Col\",\n      \"children\": [\n        { \"type\": \"Divider\", \"spacing\": 2 },\n        { \"type\": \"Caption\", \"value\": \"输入\" },\n        {% if input_markdown %}\n        { \"type\": \"Markdown\", \"value\": {{ input_markdown | tojson }} }\n        {% else %}\n        { \"type\": \"Text\", \"value\": \"（无输入）\", \"size\": \"sm\", \"color\": \"secondary\" }\n        {% endif %},\n        { \"type\": \"Caption\", \"value\": \"输出\" },\n        {% if output_markdown %}\n        { \"type\": \"Markdown\", \"value\": {{ output_markdown | tojson }} }\n        {% else %}\n        { \"type\": \"Text\", \"value\": {{ output_placeholder | tojson }}, \"size\": \"sm\", \"color\": \"secondary\" }\n        {% endif %}\n      ],\n      \"gap\": 2,\n      \"width\": \"100%\",\n      \"padding\": { \"top\": 2 }\n    }\n    {% endif %}\n  ],\n  \"padding\": 6,\n  \"background\": \"surface\",\n  \"size\": \"full\"\n}"
}
